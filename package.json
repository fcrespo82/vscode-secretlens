{
    "name": "secretlens",
    "displayName": "SecretLens",
    "description": "Show a codelens decrypting a secret in the document",
    "version": "1.3.0",
    "icon": "resources/icon.png",
    "galleryBanner": {
        "theme": "dark"
    },
    "publisher": "fcrespo82",
    "homepage": "https://github.com/fcrespo82/vscode-secretlens",
    "repository": {
        "type": "git",
        "url": "https://github.com/fcrespo82/vscode-secretlens"
    },
    "bugs": {
        "url": "https://github.com/fcrespo82/vscode-secretlens/issues"
    },
    "keywords": [
        "secret",
        "crypto",
        "cypher",
        "encrypt",
        "decrypt"
    ],
    "engines": {
        "vscode": "^1.20.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "title": "SecretLens: Encrypt",
                "command": "secretlens.encrypt"
            },
            {
                "title": "SecretLens: Decrypt",
                "command": "secretlens.decrypt"
            },
            {
                "title": "SecretLens: Set password",
                "command": "secretlens.setPassword"
            },
            {
                "title": "SecretLens: Copy secret",
                "command": "secretlens.copySecret"
            }
        ],
        "keybindings": [
            {
                "command": "secretlens.encrypt",
                "key": "ctrl+l ctrl+e"
            },
            {
                "command": "secretlens.decrypt",
                "key": "ctrl+l ctrl+d"
            },
            {
                "command": "secretlens.setPassword",
                "key": "ctrl+l ctrl+p"
            },
            {
                "command": "secretlens.copySecret",
                "key": "ctrl+l ctrl+c"
            }
        ],
        "configuration": {
            "title": "Configuration for SecretLens extension",
            "properties": {
                "secretlens.startsWith": {
                    "title": "Text for the extension to act upon line",
                    "description": "Text for extension to act upon line",
                    "type": "string",
                    "default": "secretlens:"
                },
                "secretlens.languages": {
                    "title": "Language identifiers",
                    "description": "Language identifiers in which the extension will act",
                    "type": "array",
                    "default": [
                        "*"
                    ]
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.32",
        "@types/node": "^6.0.107",
        "mocha": "^2.3.3",
        "typescript": "^2.8.3",
        "vscode": "^1.1.17"
    },
    "dependencies": {
        "clipboardy": "^1.2.3"
    }
}
