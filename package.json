{
    "name": "secretlens",
    "displayName": "SecretLens",
    "description": "Show a codelens decrypting a secret in the document",
    "version": "1.0.1",
    "publisher": "fcrespo82",
    "homepage": "https://github.com/fcrespo82/vscode-secretlens",
    "repository": {
        "type": "git",
        "url": "https://github.com/fcrespo82/vscode-secretlens"
    },
    "bugs": {
        "url": "https://github.com/fcrespo82/vscode-secretlens/issues"
    },
    "keywords": [
        "secret",
        "cypher",
        "encrypt",
        "decrypt"
    ],
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "title": "SecretLens: Encrypt",
                "command": "secretlens.encrypt"
            },
            {
                "title": "SecretLens: Decrypt",
                "command": "secretlens.decrypt"
            }
        ],
        "keybindings": [
            {
                "command": "secretlens.encrypt",
                "key": "ctrl+s ctrl+e"
            },
            {
                "command": "secretlens.decrypt",
                "key": "ctrl+s ctrl+d"
            }
        ],
        "snippets": [
            {
                "language": "javascript",
                "path": "./snippets/javascript.json"
            }
        ],
        "configuration": {
            "title": "Configuration for Secret extension",
            "properties": {
                "secretlens.secretFunctionFilePath": {
                    "title": "File path for file with custom function",
                    "description": "File path for file with custom function for SecretLens to apply to your text, it should follow the spec in README",
                    "type": "string"
                },
                "secretlens.startsWith": {
                    "title": "Text for the extension to act upon line",
                    "description": "Text for extension to act upon line",
                    "type": "string",
                    "default": "secretlens:"
                },
                "secretlens.languages": {
                    "title": "Language identifiers",
                    "description": "Language identifiers in which the extension will act",
                    "type": "array",
                    "default": [
                        "*"
                    ]
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}